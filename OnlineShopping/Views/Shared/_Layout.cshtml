@using OnlineShopping.Models.Home;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Online Shopping Centre</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/icon.png">
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
  
</head> 
<body>
    <div class="container">
        <div class="row">            
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="#">Online <span>Shopping Store</span></a></h1>
                       <p> My Shop</p>
                </div>
            </div>


            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="account">
                    <ul>
                        <li>
                            <div class="hidden-xs">
                                <h4><a>Call</a></h4>
                                <p>1800-3000-1571</p>
                            </div>

                            <div class="visible-xs">   
                         
                                <p>9677059043</p>
                            </div>
                        </li>
                    </ul>
                </div>
                
            </div>
            <div>
                <div class="container" id="cart">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Cart<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (Session["cart"] != null)
                                {
                                    foreach (var item in (List<Item>)Session["cart"])
                                    {
                                        <li><a href="@Url.Action("RemoveFromCart", "Home", new { productId = item.Product.ProductId })">@item.Product.ProductName (@item.Quantity)<i class="fa fa-times"></i></a></li>
                                    }
                                }
                                <li class="divider"></li>
                                <li><a href="~/Home/Checkout">Checkout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
         </div>
            <div class="row">

                <div class="col-md-12">
                    <div class="nav-menus">

                        <ul class="nav nav-pills">
                            <li class="active"><a style="border-radius:initial;" href="https://localhost:44324/home">Home</a></li>
                            <li>
                                <a style="border-radius:initial;" href="https://goo.gl/maps/S7qUt79uzbRwhM1q6">Location</a></li>
                            <li>
                                <a data-toggle="dropdown" class="dropdown-toggle" style="border-radius:initial;" href="#">Contact Us</a>
                                <ul class="dropdown-menu">
                                    <li style="padding-left:10px;padding-top:20px;height:80px;width:200px">
                                        <p><strong>Mobile:</strong>+91 8220945663</p>
                                        <p><strong>Address:</strong> Siruseri Eden Park</p>
                                    </li>
                                </ul>
                            </li>
                            <li><a style="border-radius:initial;" href="~/Admin/DashBoard">DashBoard</a></li>
                        </ul>
                    </div>

                </div>

            </div>
        
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">

                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - OnlineShopping Centre. All right reserved</p>
                    </div>

                    <div class="col-md-6 col-sm-6 copyright-right">
                        
                        <ul class="list-unstyled list-social">
                            <li><a href="https://www.facebook.com/login.php" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="https://twitter.com/" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://plus.google.com/" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
